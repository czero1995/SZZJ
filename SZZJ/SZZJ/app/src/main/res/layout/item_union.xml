<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <!-- 物品展示主图  96x100 -->

    <ImageView
        android:id="@+id/img_uninon"
        android:layout_width="96dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_app"
        android:contentDescription="商店展示主图" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignBaseline="@id/img_uninon"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/img_uninon"
        android:background="#F5F5F5"
        android:padding="5dp" >

        <!-- 物品名称 -->

        <TextView
            android:id="@+id/tv_union_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="英语俱乐部"
            android:textSize="16sp" />


        <TextView

            android:id="@+id/tv_union_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_trade_item_name"
            android:layout_centerVertical="true"
            android:text="社团"
            android:textColor="#808080"
            android:textSize="12sp" />



        <TextView
            android:id="@+id/tv_union_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系我们"
            android:autoLink="phone"
            android:textColor="#808080"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_union_type" />


        <TextView
            android:id="@+id/tv_union_bannar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="火热报名"
            android:autoLink="phone"
            android:textColor="#FF8833"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_union_name" />

    </RelativeLayout>

</RelativeLayout>