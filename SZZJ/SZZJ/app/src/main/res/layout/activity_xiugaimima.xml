<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_welcome"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_app" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="30dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            app:hintTextAppearance="@style/login_edittext_hint_text_appearance">

            <EditText
                android:id="@+id/dangqianmima"
                style="@style/mid_white"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="当前密码"
                android:textColor="@color/white"
                android:gravity="center|left"
                android:padding="15px"
                android:textColorHint="@color/white_mid_alpha"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            app:hintTextAppearance="@style/login_edittext_hint_text_appearance">

            <EditText
                android:id="@+id/xinmima"
                android:inputType="textPassword"
                style="@style/mid_white"
                android:textColor="@color/white"
                android:layout_width="300dp"
                android:gravity="center|left"
                android:layout_height="wrap_content"
                android:hint="新密码"
                android:padding="15px"
                android:textColorHint="@color/white_mid_alpha"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            app:hintTextAppearance="@style/login_edittext_hint_text_appearance">

            <EditText
                android:id="@+id/quedingmima"
                android:inputType="textPassword"
                style="@style/mid_white"
                android:layout_width="300dp"
                android:gravity="center|left"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:hint="确定密码"
                android:padding="15px"
                android:textColorHint="@color/white_mid_alpha"/>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/boder_gray_white"
            android:text="确定修改"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/forgetpasswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:text="忘记密码？"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>